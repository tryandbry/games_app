<h1>Season Stats</h1>
<table>
  <tbody>
    <tr>
      <th>Team</th>
      <th>Home / Away</th>
      <th># Games</th>
      <th>Score, avg</th>
      <th>Delta, avg</th>
    </tr>
    <% @season.each do |row| %>
      <tr>
        <td><%= row[:name] %></td>
        <td><% if row[:home] == 't' %>
        Home
        <% else %>
        Away
        <% end %>
        </td>
        <td><%= row[:gamecount] %></td>
        <td><%= '%.2f' % row[:scoreavg] %></td>
        <td><%= '%.2f' % row[:deltaavg] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
